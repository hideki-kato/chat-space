.side__bar
  .side__bar__box
    .side__bar__name__box
      .side__bar__nick__name
        = current_user.name
      .side__bar__switch
        = link_to new_group_path do
          = icon('fas', 'edit')
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog')
  .group__list
    - current_user.groups.each do |group|
      .group
        = link_to '#' do 
          .group__name
            = group.name
          .group__message 
            メッセージ
