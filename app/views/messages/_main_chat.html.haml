.main-chat
  .header
    .header__group__name
      = @group.name
      .header__group__member
        Member:
        - @group.users.each do |user|
          = user.name
    .header__edit
      =link_to "Edit",edit_group_path(@group)
  .main
    = render @messages

  .footer
    = form_with model: [@group, @message], html: {class: "form"}, local: true do |f|
      .form__contents
        = f.text_field :content, class: 'input__box', placeholder: 'type a message'
        = f.label :image, class: 'input__image' do
          = icon('far', 'image', class: 'input__icon')
          = f.file_field :image, class: 'input__files'
      = f.submit 'Send', class: 'input__send'